@model VrumVrumCar.Models.Vendedor

@{
    ViewData["Title"] = "Criar Vendedor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <h4 class="text-center">Novo Vendedor</h4>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataAdmissao" class="control-label"></label>
                    <input asp-for="DataAdmissao" class="form-control" type="date" />
                    <span asp-validation-for="DataAdmissao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Matricula" class="control-label"></label>
                    <input asp-for="Matricula" class="form-control" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Salario" class="control-label"></label>
                    <input asp-for="Salario" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
