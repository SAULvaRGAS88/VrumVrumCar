@model IEnumerable<VrumVrumCar.Models.Vendedor>

@{
    ViewData["Title"] = "Lista de Vendedores";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1 class="text-center">@ViewData["Title"]</h1>

            <p class="text-right">
                <a asp-action="Create" class="btn btn-success">Criar Novo Vendedor</a>
            </p>

            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.DataAdmissao)</th>
                        <th>@Html.DisplayNameFor(model => model.Matricula)</th>
                        <th>@Html.DisplayNameFor(model => model.Salario)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.DataAdmissao)</td>
                            <td>@Html.DisplayFor(modelItem => item.Matricula)</td>
                            <td>@Html.DisplayFor(modelItem => item.Salario)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
