@model VrumVrumCar.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <h4>Informações do Cliente</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataNasc" class="form-label"></label>
                    <input asp-for="DataNasc" type="date" class="form-control" />
                    <span asp-validation-for="DataNasc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="exemplo@dominio.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" type="tel" class="form-control" placeholder="(XX) XXXXX-XXXX" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Endereco" class="form-label"></label>
                    <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CPF" class="form-label"></label>
                    <input asp-for="CPF" class="form-control" placeholder="XXX.XXX.XXX-XX" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Criar" class="btn btn-primary btn-block" />
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
