@model VrumVrumCar.Models.Carro

@{
    ViewData["Title"] = "Detalhes do Carro";
}

<div class="container my-4">
    <h1 class="text-center">Detalhes do Carro</h1>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title">Informações do Carro</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Marca</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

                <dt class="col-sm-3">Modelo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Modelo)</dd>

                <dt class="col-sm-3">Ano de Fabricação</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AnoFabricacao)</dd>

                <dt class="col-sm-3">Ano do Modelo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AnoModelo)</dd>

                <dt class="col-sm-3">Chassi</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Chassi)</dd>

                <dt class="col-sm-3">Preço</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Preco)</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
