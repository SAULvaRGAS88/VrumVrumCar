@model VrumVrumCar.Models.Carro

@{
    ViewData["Title"] = "Adicionar Carro";
}

<div class="container my-4">
    <h1 class="text-center text-primary mb-4">Adicionar Novo Carro</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Modelo" class="form-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AnoFabricacao" class="form-label"></label>
                    <input asp-for="AnoFabricacao" class="form-control" />
                    <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AnoModelo" class="form-label"></label>
                    <input asp-for="AnoModelo" class="form-control" />
                    <span asp-validation-for="AnoModelo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Chassi" class="form-label"></label>
                    <input asp-for="Chassi" class="form-control" />
                    <span asp-validation-for="Chassi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
