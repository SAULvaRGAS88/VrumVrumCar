@model VrumVrumCar.Models.Carro

@{
    ViewData["Title"] = "Editar Carro";
}

<div class="container my-4">
    <h1 class="text-center">Editar Carro</h1>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title">Informações do Carro</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Modelo" class="form-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AnoFabricacao" class="form-label"></label>
                    <input asp-for="AnoFabricacao" class="form-control" />
                    <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AnoModelo" class="form-label"></label>
                    <input asp-for="AnoModelo" class="form-control" />
                    <span asp-validation-for="AnoModelo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Chassi" class="form-label"></label>
                    <input asp-for="Chassi" class="form-control" />
                    <span asp-validation-for="Chassi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <input type="submit" value="Salvar" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
